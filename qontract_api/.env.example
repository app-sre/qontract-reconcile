# qontract-api Configuration Example
# Copy this file to .env and adjust values for your environment

# === Logging ===
QAPI_LOG_LEVEL=INFO
# Set to false for development to get human-readable logs with stacktraces
# Set to true for production to get JSON-formatted logs
QAPI_LOG_FORMAT_JSON=true

# === Cache Backend ===
QAPI_CACHE_BACKEND=redis
QAPI_CACHE_BROKER_URL=redis://localhost:6379/0

# === Celery ===
# Leave empty to use CACHE_BROKER_URL
QAPI_CELERY_BROKER_URL=
QAPI_CELERY_RESULT_BACKEND=

# === JWT Authentication ===
QAPI_JWT_SECRET_KEY=dev-secret-key-change-in-production
QAPI_JWT_ALGORITHM=HS256
QAPI_JWT_EXPIRE_DAYS=60


# === Cache TTLs (seconds) ===
QAPI_SLACK_USERGROUP_CACHE_TTL=300
QAPI_SLACK_USERS_CACHE_TTL=900
QAPI_SLACK_CHANNELS_CACHE_TTL=900

# === Slack Rate Limiting ===
QAPI_SLACK_RATE_LIMIT_TIER=tier2
QAPI_SLACK_RATE_LIMIT_TOKENS=20
QAPI_SLACK_RATE_LIMIT_REFILL_RATE=1.0
